@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Home";
}

@if (SignInManager.IsSignedIn(User))
{
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <h2 class="mb-4 text-primary">Welcome back, @User.Identity?.Name!</h2>
                <hr />
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card shadow border-primary h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Log Workout</h5>
                        <p class="card-text">Record your sets, reps, and weight for today's session.</p>
                        <a href="#" class="btn btn-primary">Start Logging</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card shadow h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">View Progress</h5>
                        <p class="card-text">Analyze your strength gains and volume charts.</p>
                        <a href="#" class="btn btn-outline-dark">View Stats</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card shadow h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Settings</h5>
                        <p class="card-text">Update your fitness goals and account profile.</p>
                        <a href="#" class="btn btn-outline-secondary">Edit Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mt-5">
        <div class="row align-items-center p-4 p-md-5 rounded-3 border shadow-lg bg-dark text-white">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold lh-1 mb-3">TriFalcon Fitness</h1>
                <p class="lead mb-4">Elevate your training. Professional-grade workout tracking designed for athletes who demand data-driven results.</p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg px-4 me-md-2 fw-bold">Join Now</a>
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-light btn-lg px-4">Member Login</a>
                </div>
            </div>
            <div class="col-lg-5 offset-lg-1 p-0 overflow-hidden shadow-lg rounded-3">
                <img class="img-fluid" src="~/Images/TFFgym.jpg" alt="Gym Interior" width="700">
                </div>
            </div>
        </div>
    }